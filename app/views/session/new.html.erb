
  <h1 class="jumbotron">Log in</h1>


<h2><%= flash[:error] %></h2>

<div class="col-sm-4">
<div class="form-group">
<%= form_tag login_path do %>

  <div class="list-group-item">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
</div>
<div class="list-group-item">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
  </div>
  <br>
  <div class="btn btn-primary">
      <%= submit_tag "Log in" %>
  </div>

<% end %>
</div>
</div>
